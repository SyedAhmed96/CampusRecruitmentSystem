<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ahmed.campusrecruitmentsystem">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SignUpActivity"/>
        <activity android:name=".LoginActivity"/>
        <activity android:name=".StudentActivity"/>
        <activity android:name=".CompanyActivity"/>
        <activity android:name=".CompanyProfile"/>
        <activity android:name=".JobProfile"/>
        <activity android:name=".AdminActivity"/>
        <activity android:name=".StudentProfile"/>
        <activity android:name=".CompanyJobProfile"/>
        <activity android:name=".CompanyJobPost"
            android:screenOrientation="portrait"/>

    </application>

</manifest>